<section id="<%= counter %>" class="coun cart py-16">
    <% if(session.cart){ %>

<div class="order container mx-auto w-1/2">
    <div class="container flex items-center pb-4 border-b border-gray-300">
        <img src="/img/cart-black.png">
        <h1 class="text-2xl font-bold ml-4 ">Order Summary</h1>
    </div>
    <div class="pizza-list">
      <% for(let pizza of Object.values(session.cart.items)) { %>

        <div class="flex items-center my-8">
            <img class="w-24" src="/img/<%= pizza.item.image %>">
            <div class="flex-1 ml-4">
                <h1><%= pizza.item.name %></h1>
                <span><%= pizza.item.size %></span>
            </div>
            <span class="flex-1"><%= pizza.qty %></span>
            <span class="font-bold text-lg">Rs<%= pizza.qty * pizza.item.price %></span>
        </div>
        <% } %>
       
    </div>
    <hr>
    <div class="text-right">
        <div>
            <span class="text-lg font-bold">Total Amount:</span>
            <span class="amount font-bold text-2xl ml-4">Rs<%= session.cart.totalPrice %></span>
        </div>
        <% if(user){ %>
        <div>
            <form action='/orders' method="POST" class="mt-4">
                <% if(messages.error) { %>
                    <span class="text-red-500 text-sm">
                    <%= messages.error %>
                    </span>
                    <% } %>
                <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone number">
                <input name="adderess" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Adderess">
                <div>
                 <button type="submit" class="btn-primary px-6 py-4 font-bold rounded-full mt-4 text-white">
                    Order Now
                </button>
            </div>
            </form>
        </div>
        <%} else {%>
        <a href="/login" class="inline-block btn-primary cursor-pointer px-6 py-4 font-bold rounded-full mt-4 text-white">Login to continue</a>
        <% } %>
    </div>
</div>
<% }else {%>
    <div class="empty-cart py-10">
    <div class="container mx-auto text-center">
        <h1 class="text-3xl font-bold mb-2">Cart Empty</h1>
        <p class="text-gray-500 text-lg mb-10">You probably havent ordered </br>a pizza go to main page</p>
        <img class=" w-2/5 mx-auto" src="/img/empty-cart.png">
        <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12" >Go back</a>

    </div>
</div> 
<% } %>
  
</section>