<% if(session.cart){ %>
<section id="<%= session.cart.totalQty %>"class="coun status">
<% }else{ %>
    <section id="0"class="coun status"></section>
    <% } %>
    <div class="container mx-auto">
    <div class="status-box  w-2/3 mx-auto">
    <div class="flex items-center justify-between pb-16">
        <h1 class="text-xl font-bold ">Track Deleiver Status</h1>
        <h1 class="bg-white py-1 rounded-full px-4 text-green-600 text-xs" ><%= order._id %></h1>
    </div>
    <input id="hiddeninput" type="hidden" value="<%= JSON.stringify(order)%>">
